[Unit]
Description=Bluetooth MQTT gateway
Documentation=https://github.com/zewelor/bt-mqtt-gateway
After=network.target

[Service]
Type=simple
WorkingDirectory=/opt/bt-mqtt-gateway
ExecStart=/opt/bt-mqtt-gateway/venv/bin/python /opt/bt-mqtt-gateway/gateway.py
DynamicUser=yes
Restart=always

[Install]
WantedBy=multi-user.target
